@using VirtualOffice.Controllers
@model RequestEquipmentViewModel
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="#" onclick="loadPartialView('equipment')">Out of Office Table</a></li>
        <li class="breadcrumb-item active" aria-current="page">
           <p>New Request</p>
        </li>
    </ol>
</nav>

    <p class="input-group-prepend input-group-text" style="margin-bottom:20px;">CREATE EQUIPMENT REQUEST</p>


<form asp-action="SaveEquipmentRequest" method="post">
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputSummary">Summary</label>
        </div>
        <input type="text" asp-for="Summary" class="form-control custom-text-input" id="inputSummary" />
    </div>
     <div class="input-group mb-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputAdditionalInfo">Additional Info</label>
        </div>
        <input type="text" asp-for="AdditionalInfo" class="form-control custom-text-input" id="inputAdditionalInfo" />
    </div>
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputManager">Equipment Type</label>
        </div>
        <select asp-for="RequestTypeID" class="custom-select" id="inputRequestType">
            @foreach (var type in @Model.RequestTypes)
            {
                <option value="@type.Id">@type.Name</option>
            }
        </select>
    </div>
    
        <input type="hidden" asp-for="Quantity" value=1 id="inputQuantity" />
    

    <input type="submit" value="SAVE" class="btn btn-success" />
</form>