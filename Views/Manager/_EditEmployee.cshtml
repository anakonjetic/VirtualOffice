@model VirtualOffice.Models.Employee

<form asp-action="SaveEmployee" asp-controller="Manager" method="post">
	<input type="hidden" name="id" asp-for="Id" value="@Model.Id"/>
	<div class="form-group">
		<label class="control-label">First name</label>
		<input asp-for="FirstName" class="form-control"/>
		<span asp-validation-for="FirstName" class="text-danger"></span>
	</div>
	<br />
	<div class="form-group">
		<label class="control-label">Last name</label>
		<input asp-for="LastName" class="form-control" />
		<span asp-validation-for="LastName" class="text-danger"></span>
	</div>
	<br />
	<div class="form-group">
		<label class="control-label">Date of Birth</label>
		<input asp-for="DateOfBirth" class="form">
		<span asp-validation-for="DateOfBirth" class="text-danger"></span>
	</div>
	<br />
	<div class="form-group">
		<label class="control-label">Team</label>
		<select asp-for="TeamId">
			<option value=1>Development</option>
			<option value=2>Marketing</option>
			<option value=3>Finance</option>
			<option value=14>Retail</option>
			<option value=15>Administration</option>
		</select>
		<span asp-validation-for="TeamId" class="text-danger"></span>
	</div>
	<br />
	<div class="form-group">
		<label class="control-label">Equipment</label>
		<input asp-for="EquipmentId" class="form-control" />
		<span asp-validation-for="EquipmentId" class="text-danger"></span>
	</div>
	<br />
	<div class="form-group">
		<button type="submit" class="btn btn-outline-success">Save changes</button>
	</div>
</form>
